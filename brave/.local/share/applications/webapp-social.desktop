[Desktop Entry]
Type=Application
Name=WebApp Social
Comment=Social media (Whatsapp, X, LinkedIn, etc.)
Exec=brave-launcher --profile-directory=Social %U
Terminal=false
Categories=Network;WebBrowser;
Icon=brave-browser
Actions=new-window;new-private-window;

[Desktop Action new-window]
Name=New Window
Exec=brave-launcher --profile-directory=Social

[Desktop Action new-private-window]
Name=New Incognito Window
Exec=brave-launcher --profile-directory=Social --incognito
