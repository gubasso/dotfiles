[Desktop Entry]
Type=Application
Name=WebApp AI
Comment=AI assistants (Gemini, ChatGPT, Claude, etc.)
Exec=/bin/sh -c "\"\\$HOME/.local/bin/brave-launcher\" \"--profile-directory=AI\" \"\\$@\"" _ %U
Terminal=false
Categories=Network;WebBrowser;
Icon=brave-browser
Actions=new-window;new-private-window;

[Desktop Action new-window]
Name=New Window
Exec=/bin/sh -c "\"\\$HOME/.local/bin/brave-launcher\" \"--profile-directory=AI\""

[Desktop Action new-private-window]
Name=New Incognito Window
Exec=/bin/sh -c "\"\\$HOME/.local/bin/brave-launcher\" \"--profile-directory=AI\" --incognito"
