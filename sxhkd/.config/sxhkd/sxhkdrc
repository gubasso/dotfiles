# Key bindings for sxhkd

#increase the volume by 5
XF86AudioRaiseVolume
    pamixer -i 5 && sb-sendsignal 5

#decrease the volume by 5
XF86AudioLowerVolume
    pamixer -d 5 && sb-sendsignal 5

#toggle between mute and unmute
XF86AudioMute
    pamixer -t && sb-sendsignal 5

control + alt + l
    slock

XF86MonBrightness{Up,Down}
	brightnessctl --device=intel_backlight set {+1%,1%-}

Print
	flameshot gui

shift + Print
	flameshot full
